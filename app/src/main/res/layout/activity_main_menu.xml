<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="micah.idiomapp.MainMenu">

<LinearLayout
    android:id="@+id/activity_main_menu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button android:id="@+id/main_btn_normalIdiom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display a normal idiom"
        android:textAllCaps="false"/>

    <Button android:id="@+id/main_btn_sillyIdiom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display a silly idiom"
        android:textAllCaps="false"/>

    <TextView android:id="@+id/main_et_idiomLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textAlignment="center"
        android:text="Your idiom is:"/>

    <TextView android:id="@+id/main_et_idiom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textAlignment="center"/>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buildNumber"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="right"/>
</RelativeLayout>